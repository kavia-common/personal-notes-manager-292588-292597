---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Ocean Notes</title>
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<style>
  :root {
    /* Ocean Professional theme - light */
    --bg-color: #f9fafb;
    --text-color: #111827;
    --text-secondary: #4b5563;
    --border-color: rgba(17,24,39,0.1);
    --card-bg: #ffffff;
    --card-hover-bg: rgba(255, 255, 255, 0.8);
    --shadow-color: rgba(0, 0, 0, 0.08);
    --shadow-hover-color: rgba(0, 0, 0, 0.12);
  }

  body.dark-theme {
    /* Dark mode approximation retaining palette harmony */
    --bg-color: #0f172a;
    --text-color: #f8fafc;
    --text-secondary: #cbd5e1;
    --border-color: rgba(255,255,255,0.14);
    --card-bg: rgba(2,6,23,0.75);
    --card-hover-bg: rgba(2,6,23,0.55);
    --shadow-color: rgba(0,0,0,0.4);
    --shadow-hover-color: rgba(0,0,0,0.55);
  }

  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.3s ease, color 0.3s ease;
  }
</style>
